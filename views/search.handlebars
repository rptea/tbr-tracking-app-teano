{{!-- views/search.handlebars --}}
<main class="page-container">
    <h1>Find a book</h1>

    <p>Search by title, author, or keyword</p>

    {{#if error}}
        <p class="error">{{error}}</p>
    {{/if}}

    <form action="/books/search" method="GET" class="search-form">
        <label for="query">Search</label>
        <input
            id="query"
            name="query"
            type="text"
            placeholder="e.g. Legend Marie Lu"
            value="{{query}}"
            required
        >
        <button type="submit">Search</button>
    </form>

    <p>
        <a href="/books/saved">View my saved books</a>
    </p>
</main>